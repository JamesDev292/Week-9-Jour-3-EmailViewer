<h1>Email </h1>



<%= button_to 'Recevoir un email', emails_path, method: :post, data: { turbo_frame: "emails" } %>


<br>
<div class="container text-center">
  <div class="row align-items-start">
    <div class="col border-end">
        <h3 class="text-start">Liste des emails</h3>

    <div> <br>
        <%= turbo_frame_tag "emails" do %>
          
              
            <%= render partial: "emails/email", collection: @emails, as: :email  %>
                 
   
        <% end %>
    </div>
        


    </div>
    <div class="col">
    <h3 class="text-start">Email sélectionné</h3>
    <div> <br>

    <%= turbo_frame_tag "email_display" do %>
        <% if @email %>
          <%= render "show", email: @email %>
        <% else %>
          <p>Aucun email sélectionné pour l'instant.</p>
        <% end %>
      <% end %>
      
    </div>
    </div>
  </div>
</div>



